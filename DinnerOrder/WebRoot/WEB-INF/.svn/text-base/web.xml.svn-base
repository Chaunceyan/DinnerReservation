<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowOrder</servlet-name>
    <servlet-class>com.order.servlet.web.ShowOrderServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowOrderDetailServlet</servlet-name>
    <servlet-class>com.order.servlet.web.ShowOrderDetailServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>BonusPointServlet</servlet-name>
    <servlet-class>com.order.servlet.web.usermanage.BonusPointServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>ShowOrder</servlet-name>
    <url-pattern>/servlet/ShowOrderServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowOrderDetailServlet</servlet-name>
    <url-pattern>/servlet/ShowOrderDetailServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BonusPointServlet</servlet-name>
    <url-pattern>/servlet/BonusPointServlet</url-pattern>
  </servlet-mapping>

</web-app>
