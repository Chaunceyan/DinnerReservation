<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/back2"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/username_editText"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/username_textView"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/username_textView"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_textView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="68dp"
        android:text="账号:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_textView"
        android:layout_below="@+id/username_editText"
        android:layout_marginTop="30dp"
        android:text="密码:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="欢迎使用点餐系统"
        android:textAppearance="?android:attr/textAppearanceLargeInverse" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_textView"
        android:layout_below="@+id/password_editText"
        android:layout_marginTop="51dp"
        android:text="登录" />

        <CheckBox
            android:id="@+id/auto_login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/remember_password_checkbox"
            android:layout_alignBottom="@+id/remember_password_checkbox"
            android:layout_alignRight="@+id/register_button"
            android:checked="false"
            android:text="自动登录" />

        <CheckBox
            android:id="@+id/remember_password_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_button"
            android:layout_below="@+id/login_button"
            android:checked="false"
            android:text="记住密码" />

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/password_textView"
            android:layout_alignBottom="@+id/password_textView"
            android:layout_alignLeft="@+id/username_editText"
            android:layout_alignRight="@+id/username_editText"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/auto_login_checkbox"
            android:layout_toRightOf="@+id/remember_password_checkbox"
            android:text="重置" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/auto_login_checkbox"
            android:layout_toRightOf="@+id/title_textView"
            android:text="注册" />

</RelativeLayout>