<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back32" >

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="个人信息"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/headPicture_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_textView"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@+id/title_textView"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/registerTime_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_textView"
        android:layout_below="@+id/username_textView"
        android:layout_marginTop="18dp"
        android:text="注册时间:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/headPicture_imageView"
        android:layout_below="@+id/headPicture_imageView"
        android:layout_marginTop="26dp"
        android:text="账号:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

<!--     <Button
        android:id="@+id/updateInfo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/headPicture_imageView"
        android:text="修改个人信息" />

    <Button
        android:id="@+id/historyOrder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/updateInfo_button"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/updateInfo_button"
        android:text="历史订单" /> -->

    <TextView
        android:id="@+id/email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registerTime_textView"
        android:layout_below="@+id/registerTime_textView"
        android:layout_marginTop="18dp"
        android:text="邮箱:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/address_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_textView"
        android:layout_below="@+id/email_textView"
        android:layout_marginTop="20dp"
        android:text="住址:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/totalPay_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address_textView"
        android:layout_below="@+id/address_textView"
        android:layout_marginTop="18dp"
        android:text="消费总计:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tel_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/totalPay_textView"
        android:layout_below="@+id/totalPay_textView"
        android:layout_marginTop="20dp"
        android:text="联系电话:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/usernameShow_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerTime_textView"
        android:layout_alignParentRight="true"
        android:text="张二狗"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/registerTimeShow_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/registerTime_textView"
        android:layout_alignBottom="@+id/registerTime_textView"
        android:layout_alignParentRight="true"
        android:text="2011-01-01 12:01:01"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/emailShow_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email_textView"
        android:layout_alignParentRight="true"
        android:text="user1@qq.com"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/addressShow_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/address_textView"
        android:layout_alignParentRight="true"
        android:text="西安市碑林区"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/totalPayShow_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/totalPay_textView"
        android:layout_alignBottom="@+id/totalPay_textView"
        android:layout_alignParentRight="true"
        android:text="220"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/telShow_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tel_textView"
        android:layout_alignBottom="@+id/tel_textView"
        android:layout_alignParentRight="true"
        android:text="11111111"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
