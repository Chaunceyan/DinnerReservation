<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2" >

    <LinearLayout
        android:id="@+id/product_detail_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/back32" >

        <ImageView
            android:id="@+id/product_detail_product_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_weight="3"
            android:src="@drawable/western_food" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/product_detail_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="糖醋里脊"
                android:textSize="20sp"
                android:textColor="#555555"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:text="原价：" />

                <TextView
                    android:id="@+id/product_detail_originPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:text="20.00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:text="￥" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_detail_linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:text="现价：" />

                <TextView
                    android:id="@+id/product_detail_discountPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aa00aa"
                    android:textSize="20sp"
                    android:text="20.00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:text="￥" />

                <TextView
                    android:id="@+id/product_detail_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="9.0"
                    android:textColor="#008888"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#008888"
                    android:text="折"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
       android:id="@+id/product_detail_linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_detail_linearLayout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/product_detail_shopcart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:background="@drawable/my_shopcar"
            android:text="加入购物车" 
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#0000ff"/>

        <Button
            android:id="@+id/product_detail_cartAndBuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@drawable/my_shopcar"
            android:text="加入购物车并结算"
                        android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#00ff00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_detail_linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/product_detail_linearLayout3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打折开始时间：" />

            <TextView
                android:id="@+id/product_detail_disBeginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013-01-01 12:10:19" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打折结束时间：" />

            <TextView
                android:id="@+id/product_detail_disEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013-01-01 12:10:19" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为您节省：" />

            <TextView
                android:id="@+id/product_detail_saveMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
				android:textColor="#ffbbaa"
                android:text="20.99" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_detail_linearLayout4"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品描述"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/product_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="asdfjadslkfjlasdjflkajsdl;fkjalskdjfl;akjsdl;fkjla;skdjfl;kjasdlkfjal;skdfjl;kadsjfl;k"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>

</RelativeLayout>